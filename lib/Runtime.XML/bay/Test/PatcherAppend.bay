namespace Runtime.XML.Test;

use Runtime.io;
use Runtime.Unit.Test;
use Runtime.XML.XML;
use Runtime.XML.Test.XmlTest;


class PatcherAppend
{
	
	@Test{}
	static void testAdd1()
	{
		XML xml = XML::loadXml(
			'<?xml version="1.0" encoding="UTF-8"?>
			<template>
				<yaml>
					<services>
						<test>
							<image>test</image>
						</test>
						<database>
							<image>database</image>
						</database>
						<other>
							<image>other</image>
							<dns>192.168.1.1</dns>
						</other>
					</services>
				</yaml>
			</template>'
		);
		
		XML operation = XML::loadXml(
			'<operation type="add">
				<path>/template/yaml/services/*[not(dns)]</path>
				<value>
					<dns>172.30.0.1</dns>
				</value>
			</operation>'
		);
		
		xml.patch(operation);
		
		XmlTest::assertEqualXml(
			'Patch xml error',
			xml,
			'<?xml version="1.0" encoding="UTF-8"?>
			<template>
				<yaml>
					<services>
						<test>
							<image>test</image>
							<dns>172.30.0.1</dns>
						</test>
						<database>
							<image>database</image>
							<dns>172.30.0.1</dns>
						</database>
						<other>
							<image>other</image>
							<dns>192.168.1.1</dns>
						</other>
					</services>
				</yaml>
			</template>'
		);
	}
	
	
	@Test{}
	static void testAdd2()
	{
		XML xml = XML::loadXml(
			'<?xml version="1.0" encoding="UTF-8"?>
			<template>
				<yaml>
					<services>
						<test>
							<image>test</image>
						</test>
						<database>
							<image>database</image>
						</database>
						<other>
							<image>other</image>
							<dns>192.168.1.1</dns>
						</other>
					</services>
				</yaml>
			</template>'
		);
		
		XML operation = XML::loadXml(
			'<operation type="add" position="first">
				<path>/template/yaml[not(version)]</path>
				<value>
					<version>3.7</version>
				</value>
			</operation>'
		);
		
		xml.patch(operation);
		
		XmlTest::assertEqualXml(
			'Patch xml error',
			xml,
			'<?xml version="1.0" encoding="UTF-8"?>
			<template>
				<yaml>
					<version>3.7</version>
					<services>
						<test>
							<image>test</image>
						</test>
						<database>
							<image>database</image>
						</database>
						<other>
							<image>other</image>
							<dns>192.168.1.1</dns>
						</other>
					</services>
				</yaml>
			</template>'
		);
	}
	
}