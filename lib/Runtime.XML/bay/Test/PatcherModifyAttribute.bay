namespace Runtime.XML.Test;

use Runtime.io;
use Runtime.Unit.Test;
use Runtime.XML.XML;
use Runtime.XML.Test.XmlTest;


class PatcherModifyAttribute
{
	
	@Test{}
	static void testAdd1()
	{
		XML xml = XML::loadXml(
			'<?xml version="1.0" encoding="UTF-8"?>
			<root>
				<item>1</item>
				<item name="test">2</item>
				<item>3</item>
			</root>'
		);
		
		XML operation = XML::loadXml(
			'<operation type="edit_attribute">
				<path>/root/item</path>
                <name>name</name>
                <value>test2</value>
			</operation>'
		);
		
		xml.patch(operation);
		
		XmlTest::assertEqualXml(
			'Patch xml error',
			xml,
			'<?xml version="1.0" encoding="UTF-8"?>
			<root>
				<item>1</item>
				<item name="test2">2</item>
				<item>3</item>
			</root>'
		);
	}
	
}