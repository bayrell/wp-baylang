namespace Runtime.ORM;

use Runtime.BaseObject;


class QueryFilter extends BaseObject
{
	string key = "";
	string op = "";
	var value = "";
	string alias = "";
	
	
	/**
	 * Constructor
	 */
	public void constructor(string key = "", string op = "", var value = "", string alias = "")
	{
		parent();
		this.key = key;
		this.op = op;
		this.value = value;
		this.alias = alias;
	}
	
	
	/**
	 * Validate operation
	 */
	pure bool validateOp(string op)
	{
		if (op == "=") return true;
		if (op == ">") return true;
		if (op == ">=") return true;
		if (op == "<") return true;
		if (op == "<=") return true;
		if (op == "!=") return true;
		return false;
	}
	
}