namespace Runtime.Web;

use Runtime.Web.BusHttp;
use Runtime.Web.BusInterface;
use Runtime.Web.BusLocal;


class Bus
{
	/**
	 * Returns BusInterface
	 */
	static BusInterface getApi(string service)
	{
		#ifdef BACKEND then
		return @.provider(classof BusLocal);
		#endif
		
		#ifdef FRONTEND then
		return new BusHttp();
		#endif
	}
}