namespace Runtime.WordPress.Admin.Api;

use Runtime.ORM.Query;
use Runtime.ORM.Relation;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Crud.Rules.CrudRule;
use Runtime.Widget.Crud.SearchRelationApi;


class MailLogSearch extends SearchRelationApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.mail.log::search";
	
	
	/**
	 * Returns table name
	 */
	string getTableName() => "mail_delivery";
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() => [
		"id",
		"worker",
		"plan",
		"status",
		"dest",
		"uuid",
		"title",
		"message",
		"gmtime_plan",
		"gmtime_send",
		"send_email_error",
		"send_email_code",
		"gmtime_add",
		"is_deleted",
	];
	
	
	/**
	 * Returns rules
	 */
	Collection<CrudRule> getRules() =>
	[
	];
	
	
	/**
	 * Build search query
	 */
	async Query buildSearchQuery(Query q)
	{
		q.orderBy("gmtime_add", "desc");
		return q;
	}
	
	
	/**
	 * Action search
	 */
	@ApiMethod
	async void actionSearch()
	{
		await parent::actionSearch();
	}
}