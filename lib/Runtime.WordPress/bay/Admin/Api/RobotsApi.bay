namespace Runtime.WordPress.Admin.Api;

use Runtime.re;
use Runtime.DateTime;
use Runtime.ORM.Query;
use Runtime.ORM.Relation;
use Runtime.Web.BaseApi;
use Runtime.Web.Annotations.ApiMethod;
use Runtime.Widget.Crud.CrudApi;
use Runtime.Widget.Crud.Rules.CrudRule;
use Runtime.Widget.Crud.Rules.LowerCase;
use Runtime.Widget.Crud.Rules.Purify;
use Runtime.Widget.Crud.Rules.Required;
use Runtime.Widget.Crud.Rules.Unique;
use Runtime.WordPress.WP_Helper;


class RobotsApi extends BaseApi
{
	/**
	 * Returns api name
	 */
	pure string getApiName() => "admin.wordpress.robots::save";
	
	
	/**
	 * Action item
	 */
	@ApiMethod
	async void actionItem()
	{
		string content = WP_Helper::get_option("robots.txt");
		this.result.success({
			"data": {
				"pk": true,
				"item": {
					"content": content,
				},
			}
		});
	}
	
	
	/**
	 * Action save
	 */
	@ApiMethod
	async void actionSave()
	{
		string content = this.post_data
			|> attr "item"
			|> attr "content"
			|> default string ""
		;
		
		WP_Helper::update_option("robots.txt", content);
		
		this.result.success({
			"data": {
				"pk": true,
				"item": {
					"content": content,
				},
			}
		});
	}
}